{
    "name": "karma/gitter-system",
    "type": "library",
    "description": "Gitter driver for karma platform",
    "license": "MIT",
    "keywords": [
        "gitter",
        "markdown",
        "messages",
        "normalization",
        "approximation",
        "driver",
        "adapter",
        "chat"
    ],
    "require": {
        "php": ">=7.1",
        "karma/platform": "dev-master@dev",
        "serafim/gitter-api": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Karma\\System\\Gitter\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "monolog/monolog": "~1.22"
    },
    "autoload-dev": {
        "psr-4": {
            "Karma\\System\\Gitter\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "monolog/monolog": "~1.22: Logging support"
    }
}
